{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./packages",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noResolve": false,
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es6",
    "paths": {
      "@core": ["core/src"],
      "@core/*": ["core/src/*"],
      "@components": ["components/src"],
      "@components/*": ["components/src/*"],
      "components/*": ["frontend/src/components/*"],
      "middleware/*": ["frontend/src/middleware/*"],
      "data": ["frontend/src/data"],
      "data/*": ["frontend/src/data/*"],
      "layouts/*": ["frontend/src/layouts/*"],
      "modals/*": ["frontend/src/modals/*"],
      "providers/*": ["frontend/src/providers/*"],
      "scenes/*": ["frontend/src/scenes/*"],
      "services/*": ["frontend/src/services/*"],
      "utils/*": ["frontend/src/utils/*"]
    }
  },
  "include": [
    "packages/components/src/",
    "packages/frontend/src/",
    "packages/core/src/",
    "typings/*"
  ]
}
